                android:layout_height="80dp"
                android:src="@drawable/camisa"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnCamiseta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camiseta deportiva - $40.000"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tennis"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnTenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenis blancos - $120.000"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chaqueta"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnChaqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chaqueta impermeable - $95.000"/>
        </LinearLayout>

        <!-- PRODUCTO 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/gorra"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btnGorra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gorra ajustable - $30.000"/>
        </LinearLayout>


        <Button
            android:id="@+id/btnIrCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Carrito" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProductos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
